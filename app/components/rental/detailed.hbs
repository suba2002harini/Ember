<article class="rental detailed text-center">
  <br><br>
    <Rental::Images
        src={{@rental.image}}
        alt="A picture of {{@rental.title}}"
    />
  <br><br>
  <div class="details container border text-center">
    
    <h3 class="display-4 font-weight-bold">About {{@rental.title}}</h3>
        <ShareButton
            @text="Check out {{@rental.title}} on Super Rentals!"
            @hashtags="vacation,travel,authentic,blessed,superrentals"
            @via="emberjs"
        >
            Share on Twitter
        </ShareButton>
    <div class="detail owner">
      <span>Owner:</span> {{@rental.owner}}
    </div>
    <div class="detail type">
      <span>Type:</span> {{@rental.type}} â€“ {{@rental.category}}
    </div>
    <div class="detail location">
      <span>Location:</span> {{@rental.city}} <br>
      <span>Latitude:</span> {{@rental.location.lat}} <br>
      <span>Logitude:</span> {{@rental.location.lng}}
    </div>
    <div class="detail bedrooms">
      <span>Number of bedrooms:</span> {{@rental.bedrooms}}
    </div>
    <div class="detail description">
      <p>{{@rental.description}}</p>
    </div>
  </div>
</article>